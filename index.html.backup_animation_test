                footer_rights: "© 2025 Urayaha Days. All rights reserved.",
                gmail_web: "Open in Gmail Web",
                close_btn: "Close"
            }
        };

        let currentLang = localStorage.getItem('language') || 'ja';

        function switchLanguage() {
            currentLang = currentLang === 'ja' ? 'en' : 'ja';
            localStorage.setItem('language', currentLang);
            updateContent();
        }

        function updateContent() {
            document.documentElement.lang = currentLang;
            const t = translations[currentLang];

            document.querySelectorAll('[data-i18n]').forEach(el => {
                const key = el.getAttribute('data-i18n');
                if (t[key]) {
                    el.textContent = t[key];
                }
            });

            document.querySelector('.lang-switch').textContent = t.lang_button;
        }

        function openEmailOptions() {
            const dropdown = document.getElementById('contactDropdown');
            dropdown.style.display = 'block';
            setTimeout(() => dropdown.classList.add('active'), 10);
        }

        function closeDropdown() {
            const dropdown = document.getElementById('contactDropdown');
            dropdown.classList.remove('active');
            setTimeout(() => dropdown.style.display = 'none', 300);
        }

        function copyEmail() {
            navigator.clipboard.writeText('dragonrondo@gmail.com').then(() => {
                alert('メールアドレスがコピーされました\ndragonrondo@gmail.com');
            }).catch(() => {
                prompt('メールアドレス:', 'dragonrondo@gmail.com');
            });
            closeDropdown();
        }

        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeDropdown();
            }
        });

        document.addEventListener('click', function(event) {
            if (event.target.id === 'contactDropdown') {
                closeDropdown();
            }
        });

        async function fetchLatestZennArticle() {
            try {
                const response = await fetch('./latest-article.json');
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                const data = await response.json();
                
                if (data.title && data.link) {
                    translations.ja.article_title = data.title;
                    translations.en.article_title = data.title;
                    
                    const titleElement = document.querySelector('.article-title');
                    const descElement = document.querySelector('.article-description');
                    const linkElement = document.querySelector('.article-link');
                    
                    if (titleElement) titleElement.textContent = data.title;
                    if (descElement) descElement.textContent = data.description;
                    if (linkElement) linkElement.href = data.link;
                }
            } catch (error) {
                console.log('Zenn記事取得エラー（静的コンテンツを表示）:', error);
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            updateContent();
            fetchLatestZennArticle();
        });
    </script>

